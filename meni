#include <iostream>
#include <fstream>

//ukljuciti sve klase

void prikaziMeni()
{
    std::cout << "----------- MENI -----------" << std::endl;
    std::cout << "1. kviz1" << std::endl;
    std::cout << "2. kviz2 " << std::endl;
    std::cout << "3. kviz3" << std::endl;
    std::cout << "4. Rezultati" << std::endl;
    std::cout << "----------------------------" << std::endl;
}

int main()
{
    int izbor;
    bool radi = true;

    while (radi)
    {
        prikaziMeni();
        std::cout << "Unesite broj odabrane stavke: ";
        std::cin >> izbor;

        switch (izbor)
        {
            case 1:
                // opcija1
                break;

            case 2:
                // opcija2
                break;

            case 3:
                // opcija3
                break;


			//ovdje idu pitanja
            case 4: //zadnja opcija
                std::cout << "Upjesno odigran kviz!" << std::endl;
                radi = false;
                break;

            default:
                std::cout << "PogreÅ¡an unos. Molimo unesite ispravan broj stavke." << std::endl;
                break;
        }
    }

    return 0;
}
